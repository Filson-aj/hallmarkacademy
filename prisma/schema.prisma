generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model School {
  id                 String           @id @default(cuid())
  name               String           @unique
  email              String           @unique
  phone              String?
  address            String
  logo               String?
  createdAt          DateTime         @default(now())
  contactperson      String?
  contactpersonemail String?
  contactpersonphone String?
  facebook           String?
  regnumberappend    String?
  regnumbercount     Int?
  regnumberprepend   String?
  schooltype         String
  subtitle           String?
  youtube            String?
  updatedAt          DateTime         @updatedAt
  admins             Administration[]
  announcements      Announcement[]
  assignments        Assignment[]
  attendances        Attendance[]
  classes            Class[]
  events             Event[]
  galleries          Gallery[]
  gradings           Grading[]
  gradingpolicies    GradingPolicy[]
  lessons            Lesson[]
  news               News[]
  notifications      Notification[]
  payments           Payment[]
  paymentsetups      PaymentSetup[]
  reportcards        ReportCard[]
  students           Student[]
  subjects           Subject[]
  teachers           Teacher[]
  terms              Term[]
  tests              Test[]
}

/// *
/// * Administration (optional school)
model Administration {
  id            String         @id @default(cuid())
  username      String?
  email         String         @unique
  role          Roles
  createdAt     DateTime       @default(now())
  password      String?
  // Optional section/department within a school.
  section       String?
  schoolId      String?
  updatedAt     DateTime       @updatedAt
  active        Boolean        @default(true)
  avatar        String?
  school        School?        @relation(fields: [schoolId], references: [id])
  notifications Notification[]

  @@unique([schoolId, username], name: "unique_admin_username_per_school")
}

/// *
/// * Students
model Student {
  id                 String              @id @default(cuid())
  username           String?
  firstname          String
  surname            String
  othername          String?
  birthday           DateTime
  gender             UserSex
  religion           String?
  studenttype        String?
  house              String?
  bloodgroup         String?
  email              String              @unique
  phone              String?
  address            String?
  state              String?
  lga                String?
  // Optional section/department within a school.
  section            String?
  createdAt          DateTime            @default(now())
  password           String?
  active             Boolean             @default(true)
  admissionDate      DateTime            @default(now())
  admissionNumber    String?             @unique
  avatar             String?
  classId            String
  parentId           String
  schoolId           String
  updatedAt          DateTime            @updatedAt
  answers            Answer[]
  attendances        Attendance[]
  notifications      Notification[]
  payments           Payment[]
  reportCards        ReportCard[]
  class              Class               @relation(fields: [classId], references: [id])
  parent             Parent              @relation(fields: [parentId], references: [id])
  school             School              @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  studentAssessments StudentAssessment[]
  grades             StudentGrade[]
  promotions         StudentPromotion[]
  traits             StudentTrait[]
  submissions        Submission[]
  assignments        Assignment[]        @relation("AssignmentToStudent")

  @@unique([schoolId, username], name: "unique_student_username_per_school")
  @@unique([schoolId, phone], name: "unique_student_phone_per_school")
  @@index([schoolId])
  @@index([classId])
  @@index([parentId])
}

model Teacher {
  id            String         @id @default(cuid())
  username      String?
  title         String
  firstname     String
  surname       String
  othername     String?
  birthday      DateTime?
  bloodgroup    String?
  gender        UserSex
  state         String?
  lga           String?
  email         String         @unique
  phone         String?
  address       String?
  // Optional section/department within a school.
  section       String?
  createdAt     DateTime       @default(now())
  password      String?
  avatar        String?
  schoolId      String
  updatedAt     DateTime       @updatedAt
  active        Boolean        @default(true)
  assignments   Assignment[]
  classes       Class[]
  lessons       Lesson[]
  notifications Notification[]
  subjects      Subject[]
  school        School         @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  tests         Test[]

  @@unique([schoolId, phone], name: "unique_teacher_phone_per_school")
  @@unique([schoolId, username], name: "unique_teacher_username_per_school")
  @@index([schoolId])
}

model Parent {
  id            String         @id @default(cuid())
  username      String?
  title         String
  firstname     String
  surname       String
  othername     String?
  birthday      DateTime?
  bloodgroup    String?
  gender        UserSex
  occupation    String?
  religion      String?
  state         String?
  lga           String?
  email         String         @unique
  phone         String?
  address       String?
  createdAt     DateTime       @default(now())
  password      String?
  updatedAt     DateTime       @updatedAt
  active        Boolean        @default(true)
  avatar        String?
  notifications Notification[]
  students      Student[]
}

model Subject {
  id                 String              @id @default(cuid())
  name               String
  category           String?
  // Optional section/department within a school.
  section            String?
  createdAt          DateTime            @default(now())
  schoolId           String
  teacherId          String?
  updatedAt          DateTime            @updatedAt
  assignments        Assignment[]
  lessons            Lesson[]
  studentAssessments StudentAssessment[]
  studentGrades      StudentGrade[]
  school             School              @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  teacher            Teacher?            @relation(fields: [teacherId], references: [id])
  tests              Test[]

  @@unique([schoolId, name], name: "unique_subject_name_per_school")
  @@index([schoolId])
}

model Class {
  id                 String              @id @default(cuid())
  name               String
  category           String?
  level              String
  capacity           Int?
  // Optional section/department within a school.
  section            String?
  createdAt          DateTime            @default(now())
  formmasterId       String?
  schoolId           String
  updatedAt          DateTime            @updatedAt
  announcements      Announcement[]
  asignments         Assignment[]
  formmaster         Teacher?            @relation(fields: [formmasterId], references: [id])
  school             School              @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  events             Event[]
  lessons            Lesson[]
  reportCards        ReportCard[]
  students           Student[]
  studentAssessments StudentAssessment[]
  studentGrades      StudentGrade[]
  fromPromotions     StudentPromotion[]  @relation("FromClass")
  toPromotions       StudentPromotion[]  @relation("ToClass")
  tests              Test[]

  @@unique([schoolId, name], name: "unique_class_name_per_school")
  @@index([schoolId])
}

model PaymentSetup {
  id          String   @id @default(cuid())
  amount      Int
  fees        Int
  partpayment Boolean  @default(true)
  session     String
  term        String
  createdAt   DateTime @default(now())
  schoolId    String
  updatedAt   DateTime @updatedAt
  school      School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  @@unique([schoolId, session, term], name: "unique_paymentsetup_session_term_school")
}

model Payment {
  id        String        @id @default(cuid())
  session   String
  term      Terms
  amount    Int
  createdAt DateTime      @default(now())
  schoolId  String
  status    PaymentStatus @default(PENDING)
  studentId String
  updatedAt DateTime      @updatedAt
  school    School        @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  student   Student       @relation(fields: [studentId], references: [id])

  @@index([studentId])
  @@index([schoolId])
}

model Term {
  id        String     @id @default(cuid())
  start     DateTime
  end       DateTime
  session   String
  term      Terms
  status    TermStatus
  createdAt DateTime   @default(now())
  daysOpen  Int
  nextTerm  DateTime
  schoolId  String
  updatedAt DateTime   @updatedAt
  school    School     @relation(fields: [schoolId], references: [id], onDelete: Cascade)
}

model Lesson {
  id        Int      @id @default(autoincrement())
  name      String
  day       Day
  startTime DateTime
  endTime   DateTime
  classId   String
  createdAt DateTime @default(now())
  schoolId  String
  subjectId String
  teacherId String
  updatedAt DateTime @updatedAt
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  school    School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  subject   Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  teacher   Teacher  @relation(fields: [teacherId], references: [id])

  @@index([schoolId])
}

model Assignment {
  id          String       @id @default(cuid())
  title       String
  text        String
  file        String?
  graded      Boolean      @default(false)
  createdAt   DateTime     @default(now())
  classId     String
  dueDate     DateTime
  schoolId    String
  subjectId   String
  teacherId   String
  updatedAt   DateTime     @updatedAt
  class       Class        @relation(fields: [classId], references: [id])
  school      School       @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  subject     Subject      @relation(fields: [subjectId], references: [id])
  teacher     Teacher      @relation(fields: [teacherId], references: [id])
  submissions Submission[]
  students    Student[]    @relation("AssignmentToStudent")

  @@index([schoolId])
}

model Test {
  id           String     @id @default(cuid())
  title        String
  status       TestStatus
  instructions String
  duration     Int
  maxscore     Int
  open         Boolean
  term         String
  createdAt    DateTime   @default(now())
  classId      String
  schoolId     String
  subjectId    String
  teacherId    String
  testDate     DateTime
  testTime     DateTime
  updatedAt    DateTime   @updatedAt
  answers      Answer[]
  questions    Question[]
  class        Class      @relation(fields: [classId], references: [id])
  school       School     @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  subject      Subject    @relation(fields: [subjectId], references: [id])
  teacher      Teacher    @relation(fields: [teacherId], references: [id])

  @@index([schoolId])
}

model Question {
  id      String @id @default(cuid())
  text    String
  options Json
  answer  String
  testId  String
  test    Test   @relation(fields: [testId], references: [id], onDelete: Cascade)
}

model Answer {
  id        String   @id @default(cuid())
  score     Int
  createdAt DateTime @default(now())
  studentId String
  testId    String
  updatedAt DateTime @updatedAt
  student   Student  @relation(fields: [studentId], references: [id])
  test      Test     @relation(fields: [testId], references: [id])
}

model Submission {
  id           String      @id @default(cuid())
  answer       String
  feedback     String?
  score        Int?
  file         String?
  createdAt    DateTime    @default(now())
  assignmentId String?
  studentId    String
  updatedAt    DateTime    @updatedAt
  assignment   Assignment? @relation(fields: [assignmentId], references: [id])
  student      Student     @relation(fields: [studentId], references: [id])
}

model GradingPolicy {
  id          String       @id @default(cuid())
  title       String
  description String?
  passMark    Int
  maxScore    Int
  schoolId    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  assessments Assessment[]
  gradings    Grading[]
  school      School       @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  traits      Trait[]

  @@index([createdAt])
}

model Assessment {
  id                 String              @id @default(cuid())
  name               String
  weight             Float
  maxScore           Int
  gradingPolicyId    String
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  gradingPolicy      GradingPolicy       @relation(fields: [gradingPolicyId], references: [id])
  studentAssessments StudentAssessment[]
  studentGrades      StudentGrade[]      @relation("AssessmentToStudentGrade")

  @@unique([gradingPolicyId, name], name: "unique_assessment_name_per_policy")
  @@index([gradingPolicyId])
}

model Grading {
  id                 String              @id @default(cuid())
  title              String
  session            String
  term               Terms
  published          Boolean             @default(false)
  // Optional section/department within a school.
  section            String?
  gradingPolicyId    String
  schoolId           String
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  gradingPolicy      GradingPolicy       @relation(fields: [gradingPolicyId], references: [id])
  school             School              @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  reportCards        ReportCard[]
  studentAssessments StudentAssessment[]
  studentGrades      StudentGrade[]
  studentTraits      StudentTrait[]

  @@unique([gradingPolicyId, session, term], name: "unique_policy_session_term")
  @@index([session, term, gradingPolicyId])
}

model StudentGrade {
  id              String       @id @default(cuid())
  score           Float
  grade           String?
  remark          String?
  classId         String
  createdAt       DateTime     @default(now())
  gradingId       String
  studentId       String
  subjectId       String
  subjectPosition String?
  updatedAt       DateTime     @updatedAt
  class           Class        @relation(fields: [classId], references: [id])
  grading         Grading      @relation(fields: [gradingId], references: [id])
  student         Student      @relation(fields: [studentId], references: [id])
  subject         Subject      @relation(fields: [subjectId], references: [id])
  assessments     Assessment[] @relation("AssessmentToStudentGrade")

  @@unique([studentId, gradingId, subjectId, classId], name: "unique_student_grade_per_subject")
  @@index([studentId, gradingId, subjectId, classId])
}

model StudentAssessment {
  id           String     @id @default(cuid())
  studentId    String
  assessmentId String
  subjectId    String
  classId      String
  gradingId    String
  score        Float
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  assessment   Assessment @relation(fields: [assessmentId], references: [id])
  class        Class      @relation(fields: [classId], references: [id])
  grading      Grading    @relation(fields: [gradingId], references: [id])
  student      Student    @relation(fields: [studentId], references: [id])
  subject      Subject    @relation(fields: [subjectId], references: [id])

  @@unique([studentId, assessmentId, subjectId, classId, gradingId], name: "unique_student_assessment")
  @@index([studentId, assessmentId, subjectId, classId, gradingId])
}

model Trait {
  id              String         @id @default(cuid())
  name            String
  category        TraitCategory
  gradingPolicyId String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  studentTraits   StudentTrait[]
  gradingPolicy   GradingPolicy  @relation(fields: [gradingPolicyId], references: [id])
}

model StudentTrait {
  id        String   @id @default(cuid())
  score     Int
  remark    String?
  traitId   String
  studentId String
  gradingId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  grading   Grading  @relation(fields: [gradingId], references: [id])
  student   Student  @relation(fields: [studentId], references: [id])
  trait     Trait    @relation(fields: [traitId], references: [id])
}

model ReportCard {
  id               String   @id @default(cuid())
  totalScore       Float?
  averageScore     Float?
  classPosition    String?
  remark           String?
  formmasterRemark String?
  studentId        String
  classId          String
  gradingId        String
  schoolId         String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  class            Class    @relation(fields: [classId], references: [id])
  grading          Grading  @relation(fields: [gradingId], references: [id])
  school           School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  student          Student  @relation(fields: [studentId], references: [id])

  @@index([studentId, gradingId, classId])
}

model StudentPromotion {
  id          String          @id @default(cuid())
  studentId   String
  fromClassId String
  toClassId   String
  session     String
  promotedAt  DateTime        @default(now())
  status      PromotionStatus
  remark      String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  fromClass   Class           @relation("FromClass", fields: [fromClassId], references: [id])
  student     Student         @relation(fields: [studentId], references: [id])
  toClass     Class           @relation("ToClass", fields: [toClassId], references: [id])
}

model Attendance {
  id        Int      @id @default(autoincrement())
  date      DateTime
  present   Boolean
  createdAt DateTime @default(now())
  schoolId  String
  studentId String
  school    School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  student   Student  @relation(fields: [studentId], references: [id])

  @@index([schoolId])
  @@index([studentId])
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  startTime   DateTime
  endTime     DateTime
  classId     String?
  createdAt   DateTime @default(now())
  schoolId    String?
  updatedAt   DateTime @updatedAt
  class       Class?   @relation(fields: [classId], references: [id])
  school      School?  @relation(fields: [schoolId], references: [id])
}

model Announcement {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  classId     String?
  createdAt   DateTime @default(now())
  schoolId    String?
  updatedAt   DateTime @updatedAt
  class       Class?   @relation(fields: [classId], references: [id])
  school      School?  @relation(fields: [schoolId], references: [id])
}

model News {
  id          String       @id @default(cuid())
  title       String
  content     String
  excerpt     String?
  author      String
  category    NewsCategory
  status      NewsStatus   @default(DRAFT)
  featured    Boolean      @default(false)
  image       String?
  readTime    Int?
  publishedAt DateTime?
  createdAt   DateTime     @default(now())
  schoolId    String?
  updatedAt   DateTime     @updatedAt
  school      School?      @relation(fields: [schoolId], references: [id])

  @@index([schoolId])
}

model Gallery {
  id          String          @id @default(cuid())
  title       String
  description String?
  imageUrl    String
  category    GalleryCategory
  isActive    Boolean         @default(true)
  order       Int?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  schoolId    String?
  school      School?         @relation(fields: [schoolId], references: [id])

  @@index([schoolId])
}

model Notification {
  id        String           @id @default(cuid())
  title     String
  message   String
  type      NotificationType
  broadcast Boolean          @default(false)
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  studentId String?
  teacherId String?
  parentId  String?
  adminId   String?
  schoolId  String?
  admin     Administration?  @relation(fields: [adminId], references: [id])
  parent    Parent?          @relation(fields: [parentId], references: [id])
  school    School?          @relation(fields: [schoolId], references: [id])
  student   Student?         @relation(fields: [studentId], references: [id])
  teacher   Teacher?         @relation(fields: [teacherId], references: [id])

  @@index([schoolId])
}

enum UserSex {
  MALE
  FEMALE
}

enum Day {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
}

enum Roles {
  Admin
  Super
  Management
}

enum TestStatus {
  Completed
  Cancelled
  Pending
}

enum TermStatus {
  Active
  Inactive
}

enum Terms {
  First
  Second
  Third
}

enum NewsCategory {
  ACHIEVEMENT
  SPORTS
  FACILITIES
  ARTS
  EDUCATION
  COMMUNITY
  GENERAL
}

enum NewsStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum GalleryCategory {
  CAROUSEL
  LOGO
  FACILITIES
  EVENTS
  STUDENTS
  TEACHERS
  ACHIEVEMENTS
  GENERAL
}

enum NotificationType {
  PAYMENT_DUE
  PAYMENT_CONFIRMED
  NEW_USER
  NEW_EVENT
  NEW_ANNOUNCEMENT
  ASSIGNMENT_DUE
  TEST_SCHEDULED
  GENERAL
}

enum PaymentStatus {
  PENDING
  PARTIAL
  PAID
  OVERDUE
}

enum TraitCategory {
  AFFECTIVE
  PSYCHOMOTOR
  BEHAVIOURAL
  COGNITIVE
}

enum PromotionStatus {
  PROMOTED
  REPEATED
  GRADUATED
  WITHDRAWN
}
